{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "test\\/.*.tsx?$",

    "collectCoverage": true,
    "collectCoverageFrom": ["src/**"], 

    "coverageThreshold": {
        "global": {
            "branches": 100,
            "functions": 100,
            "lines": 100,
            "statements": 100
        }
    } 
}
